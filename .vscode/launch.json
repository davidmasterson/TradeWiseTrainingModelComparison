{
    "configurations": [
        {
            "name": "Python Debugger: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                 "--no-reload"
                
            ],
            "jinja": true,
            "autoStartBrowser": false,
            "python":"${command:python.interpreterPath}"
        }
    ]
}